{
    "name": "frontend-npm-scripts",
    "version": "2.0.0",
    "description": "Use to start your frontend project. Contains project ready editorconfig, eslint, package.json npm scripts.",
    "main": "placeholder",
    "prettier": "prettier-config-ackama",
    "engines": {
        "node": ">=13.1.0"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:squareweave/frontend-npm-scripts.git"
    },
    "devDependencies": {
        "@babel/core": "^7.7.5",
        "@babel/plugin-transform-react-jsx": "^7.7.4",
        "a11y": "^0.5.1",
        "autoprefixer": "^9.7.3",
        "babel-eslint": "^10.0.3",
        "browser-sync": "^2.26.7",
        "chokidar-cli": "^2.1.0",
        "colors": "^1.4.0",
        "concat": "^1.0.3",
        "copyfiles": "^2.1.1",
        "cross-var": "^1.1.0",
        "cssnano": "^4.1.10",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-eslint-comments": "^3.1.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "filesize-cli": "^0.0.3",
        "imagemin-cli": "^5.1.0",
        "lodash": "^4.17.15",
        "metalsmith": "^2.3.0",
        "minimist": "^1.2.0",
        "mkdirp": "^0.5.1",
        "modernizr": "^3.8.0",
        "node-sass": "^4.13.0",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-eslint": "^1.0.8-2",
        "postcss": "^7.0.25",
        "postcss-cli": "^6.1.3",
        "postcss-pxtorem": "^4.0.1",
        "preact": "^10.1.1",
        "preact-compat": "^3.19.0",
        "preact-render-to-string": "^5.1.2",
        "prettier": "^1.19.1",
        "prettier-config-ackama": "^0.1.2",
        "rimraf": "^3.0.0",
        "semver": "^7.1.0",
        "stylelint": "^12.0.0",
        "stylelint-config-recommended-scss": "^4.1.0",
        "stylelint-scss": "^3.13.0",
        "svg-sprite": "^1.5.0",
        "webfonts-generator": "^0.4.0"
    },
    "dependencies": {
        "foundation-sites": "^6.6.1",
        "gsap": "^3.0.4",
        "http-server": "^0.12.0",
        "jquery": "^3.4.1",
        "moment": "^2.24.0",
        "motion-ui": "^2.0.3",
        "owl.carousel": "^2.3.4",
        "prop-types": "^15.7.2",
        "respinner": "^3.0.2",
        "smart-outline": "^0.0.5",
        "tachyons": "^4.11.1"
    },
    "browserslist": [
        "last 2 versions"
    ],
    "config": {
        "assets": "app/assets",
        "dist": "dist/assets"
    },
    "alias": {
        "react": "preact/compat",
        "react-dom/test-utils": "preact/test-utils",
        "react-dom": "preact/compat"
    },
    "babel": {
        "plugins": [
            [
                "@babel/plugin-transform-react-jsx",
                {
                    "pragma": "h",
                    "pragmaFrag": "Fragment"
                }
            ]
        ]
    },
    "scripts": {
        "a11y": "a11y http://localhost > config/accessibility-report.txt",
        "checkversion": "node config/check-version",
        "size": "filesize-cli dist/assets/",
        "svgsprite": "svg-sprite --config config/svgsprite.json $npm_package_config_assets/images/sprite/*.svg",
        "css": "node-sass $npm_package_config_assets/scss/*.scss --include-path node_modules -o $npm_package_config_dist/css",
        "js:build": "NODE_ENV=production parcel build $npm_package_config_assets/js/app.js --out-dir $npm_package_config_dist/js --out-file app.dist.js --no-source-maps",
        "js:watch": "NODE_ENV=development parcel watch $npm_package_config_assets/js/app.js --out-dir $npm_package_config_dist/js --out-file app.dist.js",
        "images": "imagemin $npm_package_config_assets/images/* --out-dir=dist/assets/images",
        "copy": "copyfiles -u 1 app/**/*.{css,html,otf,ttf,woff2,jpg} dist/",
        "copy:html": "copyfiles -u 1 app/**/*.html dist/",
        "browsersync": "browser-sync start --config=config/browsersync.js",
        "watch:html": "export SHELL=bash && chokidar \"app/**/*.html\" -c \"npm run copy:html\"",
        "watch:scss": "export SHELL=bash && chokidar \"$npm_package_config_assets/scss/**/*.scss\" -c \"npm-run-all \"css -- --source-map-embed true\"\"",
        "setup": "mkdirp $npm_package_config_dist/js",
        "postcss": "postcss $npm_package_config_dist/css --config ./config --verbose --replace",
        "prebuild": "npm-run-all setup",
        "build": "npm-run-all svgsprite --parallel \"css -- --output-style compressed\" js:build",
        "postbuild": "npm-run-all copy size postcss",
        "prewatch": "npm-run-all setup css build",
        "watch": "npm-run-all --parallel browsersync watch:scss watch:html js:watch"
    },
    "author": "",
    "license": "ISC"
}
