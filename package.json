{
  "name": "experiments",
  "version": "1.0.0",
  "description": "he",
  "main": "test.js",
  "dependencies": {
    "autoprefixer": "^7.1.3",
    "babel-eslint": "^7.2.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.13",
    "browserify": "^14.4.0",
    "concat": "^1.0.3",
    "concurrently": "^3.5.0",
    "copyfiles": "^1.2.0",
    "cross-var": "^1.0.3",
    "cssnano": "^3.10.0",
    "eslint": "^4.5.0",
    "eslintify": "^3.1.0",
    "filesize-cli": "^0.0.3",
    "foundation-sites": "^6.4.3",
    "htmlmin": "^0.0.7",
    "imagemin-cli": "^3.0.0",
    "jquery": "^3.2.1",
    "node-sass": "^4.5.3",
    "postcss": "^6.0.10",
    "postcss-cli": "^4.1.0",
    "postcss-pxtorem": "^4.0.1",
    "pxtorem": "^1.0.0",
    "rimraf": "^2.6.1",
    "svg-sprite": "^1.3.7",
    "tachyons": "^4.8.1",
    "uglifyify": "^4.0.3",
    "watch": "^1.0.2",
    "watchify": "^3.9.0"
  },
  "babel": {
    "presets": [
      "es2015",
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 3 versions",
              "ie >= 10"
            ]
          }
        }
      ]
    ]
  },
  "postcss": {
    "autoprefixer": {
      "browsers": [
        "last 3 versions",
        "ie >= 10"
      ]
    },
    "cssnano": {
      "autoprefixer": "false"
    },
    "postcss-pxtorem": {
      "rootValue": "16",
      "replace": "false",
      "propWhiteList": [],
      "selectorBlack:ist": [
        ":before",
        ":after",
        "::before",
        "::after"
      ]
    }
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        1,
        4
      ],
      "comma-style": [
        2,
        "last"
      ],
      "no-undef": 0,
      "func-names": 0,
      "no-labels": 2,
      "keyword-spacing": [
        2,
        {
          "before": true,
          "after": true
        }
      ],
      "no-empty-label": 0,
      "no-console": 0,
      "semi": 1
    },
    "globals": {
      "mixpanel": true,
      "require": true,
      "jQuery": true,
      "Foundation": true,
      "$": true
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "parser": "babel-eslint",
    "extends": "eslint:recommended"
  },
  "concat": {
    "dist": "app/assets/js/concat.dist.js",
    "files": [
      "node_modules/jquery/dist/jquery.min.js",
      "node_modules/foundation-sites/dist/js/foundation.min.js"
    ]
  },
  "scripts": {
    "size": "filesize-cli dist/assets/",
    "svgsprite": "svg-sprite --config config/svgsprite.json app/assets/images/sprite/*.svg",
    "clean": "rimraf dist && rimraf app/**/*.css && rimraf app/assets/images/sprite/symbol && npm run svgsprite",
    "css": "node-sass app/assets/scss/*.scss --include-path node_modules -o app/assets/css",
    "js:concat": "node config/concat",
    "js:browserify": "browserify app/assets/js/app.js -t eslintify -t [ babelify ] -g uglifyify -o app/assets/js/app.dist.js",
    "js:watch": "watchify --verbose --debug app/assets/js/app.js -t eslintify -t [ babelify ] -o app/assets/js/app.dist.js",
    "images": "imagemin app/assets/images/* --out-dir=dist/assets/images",
    "copy": "copyfiles -u 1 app/**/*.{css,html,js,otf,ttf,woff2,jpg} dist/",
    "browsersync": "browser-sync start --server 'app' --files 'app'",
    "prebuild": "npm run clean",
    "prewatch": "npm run clean && npm run css",
    "build": "concurrently \"npm run css -- --output-style compressed\" \"npm run js:browserify\"",
    "postbuild": "postcss app/assets/css/*.css -c config/postcss.config.js --dir app/assets/css && npm run copy && npm run size",
    "watch": "concurrently \"npm run css -- --source-map-embed true -w\" \"npm run js:watch\" \"npm run browsersync\""
  },
  "author": "",
  "license": "ISC"
}
